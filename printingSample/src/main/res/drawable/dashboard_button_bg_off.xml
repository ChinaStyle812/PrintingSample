<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#d2d6d9" />
        </shape>
    </item>
    <item>
        <inset android:insetBottom="1px" >
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="90"
                    android:endColor="#f5f7fa"
                    android:startColor="#eef1f5" />
            </shape>
        </inset>
    </item>

</layer-list>